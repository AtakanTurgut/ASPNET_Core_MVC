@model UserDtoForUpdate

<div class="text-center my-2">
    <div class="display">
        <i class="fa-solid fa-pen-to-square"></i>
        <b> Update @Model?.UserName </b>
    </div>
</div>

<form method="post" asp-action="Update">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group my-2">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <div class="form-group my-3">
                        <div class="btn-group d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded">
                                <i class="fa fa-solid fa-arrow-left"></i>
                                Back
                            </a>
                            &nbsp;
                            <button type="submit" class="btn btn-success rounded">
                                <i class="fa-solid fa-pen-to-square"></i>
                                Update
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="lead p-2 mt-2">
                        Roles
                        @foreach (var role in Model.Roles)
                        {
                            <div class="form-check my-2">
                                <input type="checkbox" name="Roles" value="@role"
                                    checked="@(Model.UserRoles.Contains(role))" class="form-check-input" />
                                <label class="form-check-label"> @role </label>
                            </div>
                        }
                    </div>
                    <div class="text-muted">
                        Please choose the roles for the user.
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-1"></div>


    </div>
</form>