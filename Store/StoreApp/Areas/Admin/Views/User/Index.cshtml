@model IEnumerable<IdentityUser>

<div class="text-center my-2">
    <div class="display">
        <i class="fa-solid fa-users"></i>
        <b> Users </b>
    </div>

    <div class="d-flex justify-content-end my-2">
        <a class="btn btn-success" asp-action="Create"><i class="fa-solid fa-plus"></i> Create New User </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>User Id</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (IdentityUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td user-name="@user.UserName" user-role=""></td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-info rounded" asp-action="ResetPassword" asp-route-id="@user.UserName">
                                <i class="fa-solid fa-unlock-keyhole"></i>
                            </a>
                            <a class="btn btn-warning rounded" asp-action="Update" asp-route-id="@user.UserName">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <form method="post" asp-action="DeleteOneUser">
                                <input type="hidden" name="UserName" value="@user.UserName" />
                                <button class="btn btn-danger rounded" type="submit" >
                                    <i class="fa-regular fa-circle-xmark"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>