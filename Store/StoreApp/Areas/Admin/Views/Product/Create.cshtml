@model ProductDtoForInsertion

<div class="text-center">
    <div class="display">
        <i class="fa-solid fa-truck-ramp-box"></i>
        <b> Create Product </b>
    </div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-success" type="submit"><i class="fa-solid fa-floppy-disk"></i> Save Product </button>
            &nbsp;
            <a asp-action="Index" class="btn btn-outline-primary"><i class="fa-solid fa-list"></i> Product </a>
        </div>

    </div>
</form>