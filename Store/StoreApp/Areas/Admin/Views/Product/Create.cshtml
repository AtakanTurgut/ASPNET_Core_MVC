@model Product

<div class="text-center">
    <div class="display6">
        Create Product
    </div>
</div>

<form method="post" asp-action="Create">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
           <!-- foreach (Category category in ViewBag.Categories) 
            {
                <option value=" category.CategoryId">  category.CategoryName </option>
            } -->
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-success" type="submit"><i class="fa-solid fa-floppy-disk"></i> Save Product </button>
            &nbsp;
            <a asp-action="Index" class="btn btn-outline-primary"><i class="fa-solid fa-list"></i> Product List </a>
        </div>

    </div>
</form>