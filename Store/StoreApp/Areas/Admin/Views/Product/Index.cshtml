@model IEnumerable<Product> 

<div class="text-center">
    <div class="display">
        <i class="fa-solid fa-tags"></i>
        <b> Products (@await Component.InvokeAsync("ProductSummary")) </b>
    </div>

    <div class="d-flex justify-content-end my-2">
        <a class="btn btn-success" asp-action="Create"><i class="fa-solid fa-plus"></i> Create New Product </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model) 
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>
                        <img class="border border-secondary rounded" src="@product?.ImageUrl" alt="@product.ProductName" width="55" />
                    </td>
                    <td>@product.ProductName</td>
                    <td>@product.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a data-toggle="tooltip" data-placement="top" title="Information" class="btn btn-info" target="_blank" asp-area="" asp-controller="Product" asp-action="GetOneProductById" asp-route-id="@product.ProductId">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Edit Product" class="btn btn-warning" asp-action="Update" asp-route-id="@product.ProductId"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a data-toggle="tooltip" data-placement="top" title="Delete Product" class="btn btn-danger" asp-action="Delete" asp-route-id="@product.ProductId"><i class="fa-regular fa-circle-xmark"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(() => 
        {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
