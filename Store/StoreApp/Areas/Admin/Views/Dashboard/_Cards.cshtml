
<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of <b>Products</b> </h6>
                <h3 class="text-center display">
                    @await Component.InvokeAsync("ProductSummary")
                </h3>
                <a asp-controller="Product" asp-action="Index" class="card-link text-white">Products</a>
                <a asp-controller="Product" asp-action="Create" class="card-link text-white">New Product</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of <b>Categories</b> </h6>
                <h3 class="text-center display">
                    @await Component.InvokeAsync("CategorySummary")
                </h3>
                <a asp-controller="Category" asp-action="Index" class="card-link text-white">Categories</a>
                <a asp-controller="Category" asp-action="Create" class="card-link text-white">New Category</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-danger text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of <b>Orders in Progress</b> </h6>
                <h3 class="text-center display">
                    @await Component.InvokeAsync("OrderInProgress")
                </h3>
                <a asp-controller="Order" asp-action="Index" class="card-link text-white">Orders</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-secondary text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of <b>Users</b> </h6>
                <h3 class="text-center display">
                    @await Component.InvokeAsync("UserSummary")
                </h3>
                <a asp-controller="User" asp-action="Index" class="card-link text-white">Users</a>
                <a asp-controller="User" asp-action="Create" class="card-link text-white">New User</a>
            </div>
        </div>
    </div>
</div>