@model ProductListViewModel

@section Footer {
    <div>
        Only for Product Index footer
    </div>
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("ProductFilterMenu")
        <div products="" count="6"></div>
    </div>
    <div class="col-md-9">
        <div class="text-left my-2">
            <h6 class="display-6">
                Products (@await Component.InvokeAsync("ProductSummary"))
            </h6>
        </div>

        <div class="row my-2">
            @foreach (Product product in Model.Products)
            {   
                <partial name="_ProductCard" model="@product" />
            }
        </div>
        <div class="text-center">
            <div page-model="@Model.Pagination" 
                 page-action="Index" 
                 page-classes-enabled="true" 
                 page-class="btn" 
                 page-class-normal="btn-outline-secondary" 
                 page-class-selected="btn-dark"
                 class="btn-group">
            </div>
        </div>
    </div>
</div>

<!-- Footer -->