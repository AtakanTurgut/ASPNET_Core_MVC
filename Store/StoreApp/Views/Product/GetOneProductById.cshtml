@model Product

<!-- Header -->

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h3 class="display-6">
                @Model.ProductName
            </h3>
            <img class="img-fluid shadow rounded my-2" src="@Model?.ImageUrl" alt="@Model.ProductName" width="550" />

            <p class="lead text-danger">@Model.Price.ToString("c")</p>
        </div>
    </div>
</div>

<div class="text-center">
    <div class="btn-group">
        <a class="btn btn-secondary rounded" asp-controller="Home" asp-action="Index">
            <i class="fa-solid fa-house"></i> Home
        </a>
        &nbsp;

        <form id="@Model.ProductId" asp-page="/cart" method="post">
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

            <button type="submit" class="btn btn-outline-success">
                <i class="fa fa-cart-plus"></i>
            </button>
        </form>
        &nbsp;

        <a class="btn btn-outline-primary rounded" asp-controller="Product" asp-action="Index">
            <i class="fa-solid fa-list"></i> Products
        </a>
    </div>
</div>

@section Header {
    <div>
        Header for only Get
    </div>
}
