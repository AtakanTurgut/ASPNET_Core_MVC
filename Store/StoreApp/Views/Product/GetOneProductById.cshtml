@model Product

<!-- Header -->

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h3 class="display-6">
                @Model.ProductName
            </h3>
            <img class="img-fluid shadow rounded my-2" src="@Model?.ImageUrl" alt="@Model.ProductName" width="500"/>

            <p class="lead text-danger">@Model.Price.ToString("c")</p>
        </div>
    </div>
</div>

<div class="btn-group">
    <a class="btn btn-warning" asp-controller="Home" asp-action="Index">
        <i class="fa-solid fa-house"></i> Home 
    </a>
    &nbsp;
    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index"> 
        <i class="fa-solid fa-list"></i> Products 
    </a>
</div>

@section Header {
    <div>
        Header for only Get
    </div>
}
