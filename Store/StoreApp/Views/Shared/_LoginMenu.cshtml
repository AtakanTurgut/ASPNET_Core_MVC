
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <li class="nav-item">
        <a target="_blank" class="nav-link text-dark" aria-current="page" asp-area="Admin" asp-controller="Dashboard"
            asp-action="Index">
            Admin
        </a>
    </li>
}

@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link" aria-current="page" asp-area="" asp-controller="Account" asp-action="Logout"
            asp-route-returnUrl="@Context.Request.PathAndQuery()">
            Logout
            <i class="fa-solid fa-right-from-bracket"></i>
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" aria-current="page" asp-area="" asp-controller="Account" asp-action="Login"
            asp-route-returnUrl="@Context.Request.PathAndQuery()">
            <i class="fa-solid fa-right-to-bracket"></i>
            Login
        </a>
    </li>
}
